source 'http://rubygems.org'

gem 'rails', '3.2.13'

# Bundle edge Rails instead:
# gem 'rails',     :git => 'git://github.com/rails/rails.git'

gem 'execjs'

gem 'therubyracer'

gem 'oauth2'

gem "net-ldap"

gem 'approval', :path => '../approval'

gem 'json'

gem 'rest-client'

gem 'twitter-bootstrap-rails', '2.1.7' # leave at this version until can fix "Less:Error: 'fontawesome.less' wasn't found" error
gem 'less-rails'
gem 'ruby-recaptcha'

group :deployment, :integration do
  # Deploy with Capistrano
  gem 'capistrano'
  # Multi-stage deployment
  gem 'capistrano-ext'
  gem 'thin'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

gem 'jquery-rails'

# Lets use SimpleCov for Ruby > 1.9
group :test do
  gem 'ci_reporter'
  gem 'test-unit'
	gem 'simplecov'
	gem 'simplecov-rcov'
  gem "mocha" ,'0.14.0', :require => false
end

gem 'encrypted-cookie-store'



